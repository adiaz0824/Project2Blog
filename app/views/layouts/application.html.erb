<!DOCTYPE html>
<html>
<head>
  <title>BrainFogBlog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= link_to "List all bloggers", users_path %>

<% if current_user != nil %> 
	This is the person who's logged in: <%= current_user.email%>
	<%= button_to "Create post", new_post_path, method: :get %>
	<%= button_to "Log out", sessions_path, method: :delete %> 

<% else %>
	<%= button_to "Sign up", new_user_path, method: :get %> 	
	<%= button_to "Log in", new_sessions_path, method: :get %> 
<% end %>

<%= yield %>

</body>
</html>
